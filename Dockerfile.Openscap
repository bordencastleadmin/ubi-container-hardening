ARG CONTAINER

FROM ${CONTAINER}

USER root
WORKDIR /tmp

# Install required tools
RUN dnf install openscap-scanner unzip -y

# Add the SCAP Security Guide archive
ADD --chmod=0755 https://github.com/ComplianceAsCode/content/releases/download/v0.1.72/scap-security-guide-0.1.72.zip /tmp/scap-security-guide-0.1.72.zip

# Unzip the SCAP Security Guide
RUN unzip /tmp/scap-security-guide-0.1.72.zip

# Detect OS version and select the appropriate SCAP file
RUN source /etc/os-release && \
    case "$VERSION_ID" in \
      8*) SCAP_FILE="/tmp/scap-security-guide-0.1.72/ssg-rhel8-ds.xml" ;; \
      9*) SCAP_FILE="/tmp/scap-security-guide-0.1.72/ssg-rhel9-ds.xml" ;; \
      10*) SCAP_FILE="/tmp/scap-security-guide-0.1.72/ssg-rhel10-ds.xml" ;; \
      *) echo "Unsupported OS version: $VERSION_ID" && exit 1 ;; \
    esac && \
    echo "Using SCAP file: $SCAP_FILE" && \
    oscap xccdf eval \
      --profile xccdf_org.ssgproject.content_profile_stig \
      --results /tmp/oscap-report.xml \
      --report /tmp/openscap.html \
      --oval-results "$SCAP_FILE" 2>&1 || true
